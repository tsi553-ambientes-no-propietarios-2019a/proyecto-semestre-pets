{% extends 'base.html.twig' %}

{% block title %}Servicio index{% endblock %}

{% block body %}
 {{ parent()}}
 <div class="container">
    <h1>Servicio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hora_Inicio</th>
                <th>Hora_Fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.HoraInicio ? servicio.HoraInicio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ servicio.HoraFin ? servicio.HoraFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('servicio_show', {'id': servicio.id}) }}">show</a>
                    <a href="{{ path('servicio_edit', {'id': servicio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('servicio_new') }}">Create new</a>
</div>
{% endblock %}
