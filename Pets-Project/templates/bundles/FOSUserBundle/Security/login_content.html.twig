{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<center>
<div class="container">
    <div class="col-md-4">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
    
        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" class="form-control" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control" id="password" name="_password" required="required" class="form-control" autocomplete="current-password" />
        </div>

        <div class="form-group form-check">
            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-check-input"/>
            <label class="form-check-label"for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

            <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>
</center>

