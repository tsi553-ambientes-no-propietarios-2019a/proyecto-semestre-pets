        <div class="col-lg-8">
        <center>
            <div class="p-2 flex-column border border-secondary rounded-lg" style="margin-top: 25px; background-color: #FFF; opacity:0.8">
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
